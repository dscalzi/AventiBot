<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<Scene xmlns:fx="http://javafx.com/fxml/1" width="400" height="450" fx:controller="com.dscalzi.aventibot.ui.SettingsController">
	<HBox fx:id="main_root" VBox.vgrow="ALWAYS">
		<StackPane VBox.vgrow="ALWAYS">
			<Rectangle width="3" height="${main_root.height}" fill="#0f579d"/>
		</StackPane>
		<VBox id="fields" HBox.hgrow="ALWAYS">
			<Label id="settings_clarification_g" text="Global Settings (?)" alignment="center" styleClass="text">
				<tooltip>
					<Tooltip text="The below settings have no guild specific equivalent." />
				</tooltip>
			</Label>
			<Separator />
			<VBox id="apikey_setting" styleClass="setting_field">
				<Label id="apikey_setting_text" text="App Bot User Token (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="Private Bot User token generated by Discord. &#10; Required to connect. This cannot be changed once launched." />
	           		</tooltip>
				</Label>
				<TextField fx:id="apikey_settings_field" />
			</VBox>
			<VBox id="currentgame_setting" styleClass="setting_field">
				<Label id="currentgame_setting_text" text="Current Game (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="This text will be displayed as the game &#10; the bot is currently playing.
	                	&#10; It will appear under the bot on the member list as &#10; Playing &lt;x&gt;.
	                	&#10; Leave blank to have the bot play nothing." />
	           		</tooltip>
				</Label>
				<TextField fx:id="currentgame_settings_field" />
			</VBox>
			<Label id="settings_clarification_gd" text="Global Default Settings (?)" alignment="center" styleClass="text">
				<tooltip>
					<Tooltip text="The below settings are the global defaults, and will &#10; take effect in environments where it is impossible &#10; to have per-guild settings. Equivalent guild settings &#10; will take precedence in their respective guilds." />
				</tooltip>
			</Label>
			<Separator />
			<VBox id="commandprefix_setting" styleClass="setting_field">
				<Label id="commandprefix_setting_text" text="Command Prefix (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="This will be the command prefix of the bot used &#10; where per-guild settings cannot apply. In order &#10; to have the command prefix be a mention to the bot, &#10; use the value @MENTION" />
	           		</tooltip>
				</Label>
				<HBox id="commandprefix_setting_container">
					<TextField fx:id="commandprefix_settings_field" maxWidth="75"/>
				</HBox>
			</VBox>
			<VBox id="color_setting" styleClass="setting_field">
				<Label id="color_setting_text" text="Color (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="This color will take effect where per-guild &#10; settings cannot apply. The default color is #0f579d. &#10; The value must be a 7 character hex code including &#10; the hash #&lt;color&gt;" />
	           		</tooltip>
				</Label>
				<HBox id="color_settings_container">
					<ColorPicker fx:id="color_settings_picker"/>
				</HBox>
			</VBox>
			<StackPane id="spacer" VBox.vgrow="ALWAYS" />
			<HBox id="button_tray" HBox.hgrow="ALWAYS" alignment="bottom_right">
				<Label fx:id="status_text" text="Status: Saved" styleClass="text"/>
				<StackPane id="spacer" HBox.hgrow="ALWAYS" />
				<Button id="show_file_button" text="Open File Location" onAction="#handleShowFileButton" />
				<Button fx:id="save_button" text="Save" onAction="#handleSaveButton" />
			</HBox>
		</VBox>
	</HBox>
</Scene>