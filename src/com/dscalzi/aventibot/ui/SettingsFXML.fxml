<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<Scene xmlns:fx="http://javafx.com/fxml/1" width="400" height="450" fx:controller="com.dscalzi.aventibot.ui.SettingsController">
	<HBox fx:id="main_root" VBox.vgrow="ALWAYS">
		<StackPane VBox.vgrow="ALWAYS">
			<Rectangle width="3" height="${main_root.height}" fill="#0f579d"/>
		</StackPane>
		<VBox id="fields" HBox.hgrow="ALWAYS">
			<VBox id="apikey_setting" styleClass="setting_field">
				<Label id="apikey_setting_text" text="Private API Key (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="Private OAuth2 Key generated by Discord. &#10; Required for logon." />
	           		</tooltip>
				</Label>
				<TextField id="apikey_settings_field" />
			</VBox>
			<VBox id="currentgame_setting" styleClass="setting_field">
				<Label id="currentgame_setting_text" text="Current Game (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="This text will be displayed as the game &#10; the bot is currently playing.
	                	&#10; It will appear under the bot on the member list as &#10; Playing &lt;x&gt;.
	                	&#10; Leave blank to have the bot play nothing." />
	           		</tooltip>
				</Label>
				<TextField id="currentgame_settings_field" />
			</VBox>
			<VBox id="color_setting" styleClass="setting_field">
				<Label id="color_setting_text" text="Bot Color (?)" styleClass="text">
					<tooltip>
	                	<Tooltip text="This color will be used to personalize the bot &#10; in several areas. The default color is TBD. &#10; The value must be a 7 character hex code including &#10; the hash #&lt;color&gt;" />
	           		</tooltip>
				</Label>
				<TextField id="currentgame_settings_field" />
			</VBox>
			<StackPane id="spacer" VBox.vgrow="ALWAYS" />
			<HBox id="button_tray" HBox.hgrow="ALWAYS" alignment="bottom_right">
				<Text id="status_text" text="Status: Not saved!" styleClass="text"/>
				<StackPane id="spacer" HBox.hgrow="ALWAYS" />
				<Button id="save_button" text="Save" />
			</HBox>
		</VBox>
	</HBox>
</Scene>